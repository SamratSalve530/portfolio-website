    <script>
        document.addEventListener('DOMContentLoaded', () => {

        
            const projectsData = [
                {
                    title: "Jewellery Store Website",
                    description: "A beautiful online storefront for a jewellery business, built with HTML, CSS, and JavaScript.",
                    imageUrl: "https://images.pexels.com/photos/1162983/pexels-photo-1162983.jpeg",
                    liveUrl: "https://SamratSalve530.github.io/jwellery-website" // <-- REPLACE with your hosted project URL
                },
                {
                    title: "Quiz Game",
                     description: "An interactive quiz game built with Node.js, featuring multiple categories, scoring system, and a fun, responsive interface for testing your knowledge.",
                        imageUrl: "https://placehold.co/600x400/facc15/1e293b?text=Quiz+Game",
                     liveUrl: "#" 
},

                {
                    title: "Language Learning Platform",
                    description: "A dynamic frontend website built with HTML, CSS, and JavaScript, featuring interactive lessons and quizzes.",
                    imageUrl: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRo7I8Eur6xOP1Cd4tjv9VP9JOwdCNEAPqlFQ&s",
                    liveUrl: "https://samratsalve530.github.io/Language-Leanrning-Platform/" // <-- REPLACE with your hosted project URL
                }
            ];

            // --- RENDER PROJECTS ---
            const projectsGrid = document.getElementById('projectsGrid');

            function renderProjects() {
                projectsGrid.innerHTML = ''; // Clear existing projects

                projectsData.forEach((project, index) => {
                    const projectCard = document.createElement('div');
                    projectCard.className = 'project-card-3d';
                    projectCard.setAttribute('data-aos', 'fade-up');
                    projectCard.setAttribute('data-aos-delay', (index % 3) * 100);

                    projectCard.innerHTML = `
                        <a href="${project.liveUrl}" target="_blank" class="block">
                            <div class="glass-card rounded-lg h-full flex flex-col overflow-hidden">
                                <img src="${project.imageUrl}" alt="${project.title}" class="w-full h-48 object-cover">
                                <div class="p-6 flex-grow flex flex-col">
                                    <h3 class="text-xl font-bold mb-2">${project.title}</h3>
                                    <p class="text-slate-600 dark:text-slate-400 mb-4 flex-grow text-sm">${project.description}</p>
                                    <div class="mt-auto pt-4 border-t border-slate-200 dark:border-slate-700">
                                        <span class="text-accent font-semibold">View Project <i class="fa-solid fa-arrow-up-right-from-square ml-1 text-xs"></i></span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    `;
                    projectsGrid.appendChild(projectCard);
                });
                
                // Re-apply 3D tilt effect to newly created cards
                apply3DTilt();
            }

            // --- INITIALIZE AOS ---
            AOS.init({ duration: 700, once: true, offset: 50 });

            // --- THEME TOGGLE ---
            const themeToggle = document.getElementById('themeToggle');
            const themeIcon = document.getElementById('themeIcon');
            const htmlEl = document.documentElement;

            if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                htmlEl.classList.add('dark');
                themeIcon.classList.replace('fa-moon', 'fa-sun');
            } else {
                themeIcon.classList.replace('fa-sun', 'fa-moon');
            }

            themeToggle.addEventListener('click', () => {
                htmlEl.classList.toggle('dark');
                const isDark = htmlEl.classList.contains('dark');
                localStorage.setItem('theme', isDark ? 'dark' : 'light');
                themeIcon.className = isDark ? 'fa-solid fa-sun' : 'fa-solid fa-moon';
            });

            // --- TYPING EFFECT ---
            const lines = ["Full-Stack Developer", "Creative Problem Solver", "UI/UX Enthusiast"];
            const typingElem = document.getElementById('typingLine');
            let lineIndex = 0, charIndex = 0, isDeleting = false;

            function typeLoop() {
                const currentLine = lines[lineIndex];
                const typeSpeed = isDeleting ? 60 : 120;
                if (!isDeleting) {
                    typingElem.textContent = currentLine.slice(0, ++charIndex);
                    if (charIndex === currentLine.length) setTimeout(() => isDeleting = true, 2000);
                } else {
                    typingElem.textContent = currentLine.slice(0, --charIndex);
                    if (charIndex === 0) {
                        isDeleting = false;
                        lineIndex = (lineIndex + 1) % lines.length;
                    }
                }
                setTimeout(typeLoop, typeSpeed);
            }
            typeLoop();

            // --- ANIMATED PROGRESS BARS ---
            const skillsSection = document.getElementById('skills');
            const skillItems = document.querySelectorAll('.skill-item');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        skillItems.forEach(item => {
                            const bar = item.querySelector('.progress-bar-fill');
                            const percentText = item.querySelector('p');
                            const targetWidthStr = bar.dataset.width;
                            const targetPercent = parseInt(targetWidthStr, 10);

                            if (!isNaN(targetPercent)) {
                                bar.style.width = targetPercent + '%';

                                let currentPercent = 0;
                                const interval = setInterval(() => {
                                    if (currentPercent >= targetPercent) {
                                        clearInterval(interval);
                                        percentText.textContent = `${targetPercent}%`;
                                    } else {
                                        currentPercent++;
                                        percentText.textContent = `${currentPercent}%`;
                                    }
                                }, 20); 
                            }
                        });
                        observer.unobserve(skillsSection);
                    }
                });
            }, { threshold: 0.3 });
            
            if (skillsSection) {
                observer.observe(skillsSection);
            }

            // --- 3D PROJECT CARD TILT ---
            function apply3DTilt() {
                const cards = document.querySelectorAll('.project-card-3d');
                cards.forEach(card => {
                    card.addEventListener('mousemove', (e) => {
                        const rect = card.getBoundingClientRect();
                        const x = e.clientX - rect.left;
                        const y = e.clientY - rect.top;
                        const centerX = rect.width / 2;
                        const centerY = rect.height / 2;
                        const rotateX = ((y - centerY) / centerY) * -4;
                        const rotateY = ((x - centerX) / centerX) * 4;
                        card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.03, 1.03, 1.03)`;
                    });
                    card.addEventListener('mouseleave', () => {
                        card.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)';
                    });
                });
            }

            // --- NAVBAR & MOBILE MENU ---
            const navbar = document.getElementById('navbar');
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileMenu = document.getElementById('mobileMenu');
            window.addEventListener('scroll', () => {
                navbar.classList.toggle('navbar-scrolled', window.scrollY > 50);
            });
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
            
            // --- CONTACT FORM ---
            const contactForm = document.getElementById('contactForm');
            const submitBtn = document.getElementById('submitBtn');
            const formMessage = document.getElementById('form-message');

            contactForm.addEventListener('submit', (e) => {
                e.preventDefault();
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin mr-2"></i> Sending...';

                setTimeout(() => {
                    formMessage.textContent = 'Thank you! Your message has been sent.';
                    formMessage.className = 'p-3 rounded-md bg-teal-100 dark:bg-teal-900/50 text-teal-700 dark:text-teal-300 block mb-4 text-center';
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = "Send Message";
                    contactForm.reset();
                    
                    setTimeout(() => formMessage.style.display = 'none', 5000);
                }, 1500);
            });

            // --- SET CURRENT YEAR & INITIALIZE PROJECTS ---
            document.getElementById('year').textContent = new Date().getFullYear();
            renderProjects(); // Initial render of all projects
        });
    </script>
